
@{
    ViewBag.Title = "Phân Xưởng";
    Layout = null;
} 
<script src="~/Scripts/IED/Workshop/wk_Index.js"></script>

<div id="jtableWorkShop" class="table-center"></div>

<div class="modal   fade  " id="popup_WorkShop" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">   ×  </button>
                <h4 class="modal-title">Thông Tin Phân Xưởng</h4>
            </div>
            <div class="modal-body  ">
                <div class="container-fluid">
                    <input class="form-control" type="hidden" data-bind="value: Id" />
                    <div class="form-group hide">
                        <label class="control-label">Mã Phân Xưởng <span class="required-class">*</span></label>
                        <input class="form-control" id="wkcode" data-bind="value: Code" type="text" placeholder="Nhập Mã Phân Xưởng ..." />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tên Phân Xưởng <span class="required-class">*</span></label>
                        <input class="form-control" id="wkName" required="required" data-bind="value: Name" type="text" placeholder="Nhập Tên Phân Xưởng ..." />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Mô Tả </label>
                        <textarea class="form-control" id="wkDescription" required="required" data-bind="value: Description"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" wkcancel class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" wksave class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade   " id="popup_SearchWorkShop" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" wkclose data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Tìm Kiếm</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="form-group">
                        <label class="control-label">Từ khóa</label>
                        <input class="form-control" id="wktxtSearch" type="text" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Bạn muốn tìm theo ?</label>
                        <select class="form-control" id="wksearchBy">
                            @*<option value="2">Tìm Theo Mã Phân Xưởng</option>*@
                            <option value="1">Tìm Theo Tên Phân Xưởng</option>
                        </select>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="modal-footer">
                <button wkclose aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button wksearch class="btn btn-primary">
                    <div class="button-image image-search"></div>
                    Tìm Kiếm
                </button>
            </div>
        </div>
    </div>
</div>




