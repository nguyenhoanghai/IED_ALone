
@{
    ViewBag.Title = "Nhập Năng xuất cụm công đoạn";
    //Layout = null;
}

<link href="~/Scripts/IED/ProAna/ProAna_tkc.css" rel="stylesheet" />
<link href="~/Scripts/IED/TKCInsert/tkc-insert.css" rel="stylesheet" />

<div class="container">
    <div class="main-box">
        <div class="head">Năng xuất cụm công đoạn</div>
        <div class="filter">
            <div class="col-md-5">
                <div class="box-title">Thông tin năng xuất</div>
                <div class="form-group col-md-6">
                    <label class="control-label">Ngày sản xuất</label>
                    <span class="form-control" disabled id="today-date-pg"></span>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Mã hàng</label>
                    <div class="select-box">
                        <select id="tkc-insert-product-pg"></select>
                        <i id="re-tkc-insert-product-pg" class="fa fa-refresh clickable red"></i>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Phân xưởng</label>
                    <div class="select-box">
                        <select id="tkc-insert-workshop-pg"></select>
                        <i id="re-tkc-insert-workshop-pg" class="fa fa-refresh clickable red"></i>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Cụm công đoạn</label>
                    <div class="select-box">
                        <select id="tkc-insert-phase-group"></select>
                        <i id="re-tkc-insert-phase-group" class="fa fa-refresh clickable red"></i>
                    </div>
                </div>

                <div class="form-group col-md-3">
                    <label class="control-label">Tổng năng xuất</label>
                    <span id="total-quantities-pg" disabled class="form-control disabled text-center">0</span>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Năng xuất</label>
                    <input id="quantities-pg" class="form-control text-center" type="text" value="0" />
                </div>

                <div class="form-group col-md-3">
                    <label class="control-label">Hình thức</label>
                    <select id="command-type-pg" class="form-control">
                        <option value="1">Tăng</option>
                        <option value="2">Giảm</option>
                    </select>
                </div>
                <div class="clearfix"></div>
                <div class="form-group col-md-12 text-right action-box">
                    <button id="btn-insert-pg" class="btn btn-danger">Thêm năng xuất</button>
                    <button id="btn-clear-pg" class="btn btn-default"Làm mới</button>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="col-md-7">
                <div class="box-title">Năng xuất trong ngày</div>
                <div id="jtable-phase-group-production"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<script src="~/Scripts/IED/TKCInsert/tkc-insert-phase-group.js"></script>