<!--   POPUP CREATE COMMODITY - COMMODITY INFORMATION  -->
<div class="modal fade " id="capopup_Commodity" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" cancel-commo class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin mã hàng</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <input class="form-control" class="form-control" class="form-control" data-bind="value: Id" type="hidden" />
                    <div class="form-group">
                        <label class="control-label">Sản Phẩm <span class="required-class">*</span></label>
                        <div class="select-box">
                            <select id="caproduct"></select>
                            <i re_caproduct class="fa fa-refresh clickable red"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ghi chú</label>
                        <textarea class="form-control" id="caDescription"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" cancel-commo class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" save-commo class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div>

